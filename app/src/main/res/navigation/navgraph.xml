<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navgraph"
    app:startDestination="@id/nav_host_fragment2">

    <fragment
        android:id="@+id/nav_host_fragment2"
        android:name="com.weather.ui.nav_host_fragment"
        android:label="nav_host_fragment"
        tools:layout="@layout/weatherfragment" >
        <action
            android:id="@+id/action_nav_host_fragment2_to_citiesFragment"
            app:destination="@id/citiesFragment" />
    </fragment>
    <fragment
        android:id="@+id/citiesFragment"
        android:name="com.weather.ui.CitiesFragment"
        android:label="fragment_cities_list"
        tools:layout="@layout/fragment_cities_list" >
        <action
            android:id="@+id/action_citiesFragment_to_nav_host_fragment2"
            app:destination="@id/nav_host_fragment2" />
    </fragment>
</navigation>